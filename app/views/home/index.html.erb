<% content_for :javascript do %>
    <script type="text/javascript">
      ShopifyApp.ready(function () {
        ShopifyApp.Bar.initialize({title: "Home"});
      });
    </script>
<% end %>
<h2>Products</h2>

<ul>
  <% @products.each do |product| %>
      <li><%= link_to product.title, "https://#{@shop_session.url}/admin/products/#{product.id}", target: "_top" %></li>
  <% end %>
</ul>

<hr>
<%= link_to 'Sign In', new_vendor_session_path, class: "text-primary m-l-5" %>
<%= link_to 'Hello world', hello_world_path, class: "text-primary m-l-5" %>
<%= link_to 'new Hello', new_hello_path, class: "text-primary m-l-5" %>
<h2>Webhooks</h2>

<% if @webhooks.present? %>
    <ul>
      <% @webhooks.each do |webhook| %>
          <li><%= webhook.topic %> : <%= webhook.address %></li>
      <% end %>
    </ul>
<% else %>
    <p>This app has not created any webhooks for this Shop. Add webhooks to your ShopifyApp initializer if you need
      webhooks</p>
<% end %>
